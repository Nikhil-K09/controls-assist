<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Custom Top Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            style="@style/TopBarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp">

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/menuIcon"
                style="@style/IconStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_icon"
                android:contentDescription="Menu"
                android:padding="0dp" />

            <!-- Title -->
            <ImageView
                android:id="@+id/topBarTitle"
                style="@style/TitleImageStyle"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:src="@drawable/title_img"
                android:contentDescription="Title"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <!-- Content below App Bar -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- SOUND SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        style="@style/SectionTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sound Control"
                        android:paddingBottom="5dp"/>

                    <!-- Music -->
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">
                        <SeekBar
                            android:id="@+id/seek_music"
                            style="@style/SeekBarStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp"
                            android:padding="2dp"/>
                        <ToggleButton
                            android:id="@+id/toggle_music"
                            style="@style/ToggleButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="90dp"
                            android:textOn="Enabled"
                            android:textOff="Disabled"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <!-- Ringtone -->
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringtone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">
                        <SeekBar
                            android:id="@+id/seek_ringtone"
                            style="@style/SeekBarStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp" />
                        <ToggleButton
                            android:id="@+id/toggle_ringtone"
                            style="@style/ToggleButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="90dp"
                            android:textOn="Enabled"
                            android:textOff="Disabled"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <!-- Call -->
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">
                        <SeekBar
                            android:id="@+id/seek_call"
                            style="@style/SeekBarStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp" />
                        <ToggleButton
                            android:id="@+id/toggle_call"
                            style="@style/ToggleButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="90dp"
                            android:textOn="Enabled"
                            android:textOff="Disabled"
                            android:textAllCaps="false" />

                    </LinearLayout>

                    <!-- Alarm -->
                    <TextView
                        style="@style/LabelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">
                        <SeekBar
                            android:id="@+id/seek_alarm"
                            style="@style/SeekBarStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingEnd="8dp" />
                        <ToggleButton
                            android:id="@+id/toggle_alarm"
                            style="@style/ToggleButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="90dp"
                            android:textOn="Enabled"
                            android:textOff="Disabled"
                            android:textAllCaps="false" />

                    </LinearLayout>
                </LinearLayout>

                <!-- BRIGHTNESS SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        style="@style/SectionTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brightness Control"
                        android:paddingBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <ToggleButton
                            android:id="@+id/toggle_brightness"
                            style="@style/ToggleButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="90dp"
                            android:textOn="Enabled"
                            android:textOff="Disabled"
                            android:textAllCaps="false" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        style="@style/NavigationViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
